- if(current_filter_is?('all'))
  $('li.translation_key[key-id=' + "#{@translation.key.id}" + ']').children('div').removeClass('badge-success').addClass('badge-warning');
- else
  $('#translation_id_' + "#{@translation.id}").fadeOut();
  var translated_count = parseInt($('#translated_keys_count').text().replace('(','').replace(')','')) - 1;
  $('#translated_keys_count').text('(' + translated_count + ')');
  var pending_count = parseInt($('#pending_keys_count').text().replace('(','').replace(')','')) + 1;
  $('#pending_keys_count').text('(' + pending_count + ')');
  moveToNextKey($('#translation_id_' + "#{@translation.id}").attr('key-id'));

$('#translation_id_' + "#{@translation.id}").find('.unaccept_translation').removeClass('unaccept_translation').addClass('accept_translation').text('Accept')