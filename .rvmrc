#!/usr/bin/env bash

ruby_id="ruby-1.9.2-p290"
gemset_id="translation_center"

if rvm list strings | grep -q "${ruby_id}"
then

  # Load or create the specified environment
  if [[ -d "${rvm_path:-$HOME/.rvm}/environments" \
    && -s "${rvm_path:-$HOME/.rvm}/environments/${ruby_id}@${gemset_id}" ]]
  then
    \. "${rvm_path:-$HOME/.rvm}/environments/${ruby_id}@${gemset_id}"
  else
    rvm --create "${ruby_id}@${gemset_id}"
  fi

else

  # Notify the user to install the desired interpreter before proceeding.
  echo "${ruby_id} was not found, please run 'rvm install ${ruby_id}' and then cd back into the project directory."

fi
